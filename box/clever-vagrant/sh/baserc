source ~/.clever_bash

export GOPATH="$HOME"
export CODE_HOME="$HOME/src/github.com/Clever"
export CODE="$CODE_HOME"

export CODE_PATH="$CODE_HOME"
export CODE_DIRS
CODE_DIRS=($CODE_HOME)

export DOCKER_HOST="tcp://localhost:4243"

export WORKON_HOME=$HOME/.venvs/
export PROJECT_HOME=$CODE_HOME
source /usr/local/bin/virtualenvwrapper.sh

# use Go 1.5 by default
export GO15VENDOREXPERIMENT=1

# set requests ca bundle path to system certs
export REQUESTS_CA_BUNDLE=/etc/ssl/certs

export PIP_REQUIRE_VIRTUALENV=true
export PIP_DOWNLOAD_CACHE=$HOME/.pip/cache

export NVM_DIR="/home/vagrant/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

export PATH=$PATH:$GOPATH/bin:$HOME/.local/bin

